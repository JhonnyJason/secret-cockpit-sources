// qrreader styles
#qrreader-background
    position absolute
    top 0
    left 0
    z-index:  299
    height 100vh
    width 100%
    transform: translateY(-102%)
    background-color element-background

    video
        position absolute
        width 320px
        height 320px
        top calc(50vh - 160px)
        left calc(50% - 160px)


#qrreader-background.active
    transform: translateY(0)


