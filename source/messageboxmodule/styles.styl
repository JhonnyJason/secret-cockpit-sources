// messagebox styles
#messagebox
    padding 12px
    box-sizing: border-box
    width 70%
    background-color black 
    border-radius  10px 10px 0 0
    position fixed
    bottom 0
    left 10%
    transition transform 0.5s

#messagebox.gone
    transform translateY(50px)

#messagebox.error
    background-color red 
    color black
    font-weight: bold
